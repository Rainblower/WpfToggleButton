<UserControl x:Class="ToggleButton.ToggleButtonUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToggleButton"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">

    <Border PreviewMouseLeftButtonDown="ToggleTap" Width="100" Height="50" CornerRadius="25" Background="{Binding ToggleBackground}">
        <Ellipse  Height="45" Width="45" Margin="2.5 0 2.5 0" HorizontalAlignment="{Binding ToggleAlignment}" Fill="#FFB6B2B2"/>
    </Border>
    
</UserControl>
